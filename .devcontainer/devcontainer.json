{
    "name": "craft",
    "dockerComposeFile": "../docker-compose.yml",
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "workspaceFolder": "/app",
    "service": "workspace",
    "shutdownAction": "stopCompose",
    "extensions": [],
    "settings": {},
    "forwardPorts": [8080],
    "initializeCommand": "cp .env.example.dev .env && mv composer.json.default composer.json",
    "postCreateCommand": "composer install && bash -i -c 'php craft install'",
    "portsAttributes": {
        "8080": {
            "label": "HTTP"
        }
    }
}
