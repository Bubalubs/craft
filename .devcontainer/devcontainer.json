{
    "name": "craft",
    "dockerComposeFile": ["craft-docker-compose.yml"],
    "workspaceFolder": "/app",
    "service": "app",
    "shutdownAction": "stopCompose",
    "extensions": [],
    "settings": {},
    "forwardPorts": [80],
    "postCreateCommand": "cp .env.example.dev .env && composer install && bash -i -c 'php craft install'",
    "portsAttributes": {
        "80": {
            "label": "HTTP"
        }
    }
}
